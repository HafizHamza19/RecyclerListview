<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/activity_horizontal_margin_small">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:gravity="bottom">

        <RelativeLayout
            android:id="@+id/layout"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/button_menu"
            android:paddingLeft="@dimen/activity_horizontal_margin_small"
            android:paddingRight="@dimen/activity_horizontal_margin_small"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="122dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/president_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/president_name"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_menu_sub"
                    android:layout_marginBottom="@dimen/component_bottom_small"
                    fontPath="fonts/latoRegular.ttf"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/country_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/president_of"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/text_menu_subtitle"
                    android:layout_marginBottom="@dimen/component_bottom_small"
                    fontPath="fonts/latoLight.ttf"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_centerHorizontal="true"
            android:gravity="top">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/president"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                app:civ_border="false"
                android:src="@drawable/x"/>
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>